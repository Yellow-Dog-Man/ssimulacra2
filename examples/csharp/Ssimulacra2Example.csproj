<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../build/Release/ssimulacra2.dll" CopyToOutputDirectory="PreserveNewest" Condition="Exists('../../build/Release/ssimulacra2.dll')" />
    <None Include="../../build/Release/*.dll" CopyToOutputDirectory="PreserveNewest" Condition="Exists('../../build/Release/')" />
    <None Include="../../build/src/libssimulacra2.so" CopyToOutputDirectory="PreserveNewest" Condition="Exists('../../build/src/libssimulacra2.so')" />
    <None Include="../../build/src/libssimulacra2.dylib" CopyToOutputDirectory="PreserveNewest" Condition="Exists('../../build/src/libssimulacra2.dylib')" />
  </ItemGroup>

</Project>